<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Confirm Password Test Suite" >
	<test name="test login --Registration-15-- Verify that user cannot enter empty Password" >
		<classes>
			<class name="LoginPage.loginPageConfirmPasswordTests" >
			<methods>
				<include name= "testLogin_ConfirmPassword_Empty"/>
			</methods>
			</class>
		</classes>
	</test>

	<test name="test login --Registration-16-- Verify That User Can Enter Valid Matched Password" >
		<classes>
			<class name="LoginPage.loginPageConfirmPasswordTests" >
				<methods>
					<include name= "testLogin_ConfirmPassword_MatchingPassword"/>
				</methods>
			</class>
		</classes>
	</test>

	<test name="test login --Registration-17-- Verify that user cannot enter Mismatched Confirmation Password" >
		<classes>
			<class name="LoginPage.loginPageConfirmPasswordTests" >
				<methods>
					<include name= "testLogin_ConfirmPassword_NotMatchPassword"/>
				</methods>
			</class>
		</classes>
	</test>


</suite>
